<%= simple_form_for :user_search, url: users_path, method: :get, html: {class: 'form-inline'} do |f| %>
  <%= f.input :role, prompt: "Search for a title", label: false, collection: ['Normal Clerk', 'Director', 'Super-Chief', nil], selected: @role, input_html: { value: @role, class: 'search-input' } %>
  <%= f.input :department, prompt: "Search for Department", label: false, collection: ['WTID 12', 'WTRF 62', 'WAAB', 'WTRA 432', 'WAOD 5', 'WTIC 23', nil], selected: @department, input_html: { value: @department, class: 'search-input' }%>
  <%= f.input :location, prompt: "Search for Location", label: false, collection: ['Zurich', 'Basel', 'Geneva', 'Lausanne', nil], selected: @location, input_html: { value: @location, class: 'search-input' }%>

  <%= f.submit "Find", class:"btn btn-primary" %>
<% end %>
