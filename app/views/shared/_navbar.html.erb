<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "crossedforks.png", height: 50, id: 'logo' %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "My profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link"%>
      <%= link_to "Find a Colleague", users_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My Network", user_contacts_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Events", pages_events_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Random Lunch", pages_match_path, class: "navbar-wagon-link, btn-outline" %>



    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if current_user%>
          <li> <%= link_to "My profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link"%> </li>
          <li> <%= link_to "Find a Colleague", users_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
          <li> <%= link_to "My Network", user_contacts_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %> </li>
          <li> <%= link_to "Events", pages_events_path, class: "navbar-wagon-item navbar-wagon-link" %> </li>
          <li> <%= link_to "Random Lunch", pages_match_path, class: "navbar-wagon-link, btn-outline" %> </li>
          <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link"  %> </li>
        <% else %>
          <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

